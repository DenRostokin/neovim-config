{
  "yaml.format.enable": true,
  "prettier.requireConfig": true,
  "eslint.enable": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "html",
    "css",
    "scss",
    "less",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "json",
    "c",
    "cpp"
